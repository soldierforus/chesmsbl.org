extends ../layout

block content
  section.page-header: div.container
    h1 Register
  section: div.container
    div.row
      div.col-md-6.col-sm-6
        form.sky-form.boxed(action="#" method="post")
          header.size-18.margin-bottom-20
            i.fa.fa-users
            |  Register
          fieldset.nomargin
            label.input.margin-bottom-10
              i.ico-append.fa.fa-envelope
              input(required type="email" placeholder="Email address")
              b.tooltip.tooltip-bottom-right Needed to verify your account
            label.input.margin-bottom-10
              i.ico-append.fa.fa-lock
              input(required type="password" placeholder="Password")
              b.tooltip.tooltip-bottom-right Only letters, numbers, and special characters
            div.margin-top-30
              label.checkbox.nomargin
                input.checked-agree(type="checkbox" name="checkbox")
                i
                |  I agree to the
                a(href="/terms" target="_blank")  Terms of Service
              label.checkbox.nomargin
                input.checked-agree(type="checkbox" name="checkbox")
                i
                |  I want to receive news and special offers
          div.row.margin-bottom-20: div.col-md-12
            button.btn.btn-success(type="submit")
              i.fa.fa-check
              |  REGISTER
      div.col-md-6.col-sm-6
        form.sky-form.boxed(action="#" method="post")
          header.size-18.margin-bottom-20 Register using your favorite social provider
          fieldset.nomargin
            div.row
              div.col-md-8.col-md-offset-2
                a.btn.btn-block.btn-social.btn-facebook.margin-bottom-10
                  i.fa.fa-facebook
                  |  Sign up with Facebook
                a.btn.btn-block.btn-social.btn-google.margin-bottom-10
                  i.fa.fa-google
                  |  Sign up with Google
          footer
            | Already have an account yet?
            a(href="/register"): strong
              |  Login here!